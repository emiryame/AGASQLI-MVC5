@model IList<AGA.Common.DTO.Models.Demande>
@{
}
<span class="sec-icon fa fa-users"></span>
<div class="hs-inner">
    <span class="before-title">Mes tâches</span>
    <br />
    <table id="id=" bootstrap-table" class="table table-striped table-bordered" cellspacing="0">
        <tr>
            
            <th>
                Nom
            </th>
            <th>
                Prenom
            </th>
            <th>
                Date de création
            </th>
            <th>
                Attestation
            </th>
            <th>
                Date début de traitement
            </th>
            <th>
                Action
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Collaborateur.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Collaborateur.Prenom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeAttestation.Label)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateDebutTraitement)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>
@model IList<AGASQLI.ViewModels.DemandeViewModel>
@{
}
<span class="sec-icon fa fa-users"></span>
<div class="hs-inner">
    <span class="before-title">Liste des demandes en attente</span>
    <br />
    @using (Html.BeginForm("EnAttente", "Demande"))
    {
        <table id="id=" bootstrap-table" class="table table-striped table-bordered" cellspacing="0">
            <tr>
                <th>

                </th>
                <th>
                    Nom
                </th>
                <th>
                    Prenom
                </th>
                <th>
                    Date de création
                </th>
                <th>
                    Attestation
                </th>
                <th>
                    Date début de traitement
                </th>
                <th>
                    Statut
                </th>
                <th></th>
            </tr>

            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.CheckBoxFor(model => model[i].IsChecked)
                        @Html.HiddenFor(model => model[i].Demande.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model[i].Demande.Collaborateur.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model[i].Demande.Collaborateur.Prenom)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model[i].Demande.DateCreation)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model[i].Demande.TypeAttestation.Label)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model[i].Demande.DateDebutTraitement)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model[i].Demande.Statut.Label)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = Model[i].Demande.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = Model[i].Demande.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = Model[i].Demande.Id })
                    </td>
                </tr>
            }
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ajouter à mes tâches" class="btn btn-success" style="border-color:#b39964; background:#b39964; float:right;">
            </div>
        </div>
    }

</div>